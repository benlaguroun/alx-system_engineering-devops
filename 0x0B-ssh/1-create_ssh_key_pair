#!/usr/bin/env bash
# Define the key file name
KEY_NAME="school"

# Generate RSA key pair with 4096 bits and a passphrase
ssh-keygen -t rsa -b 4096 -f "$KEY_NAME" -N "betty"

# Display key information
echo "Key pair generated:"
ssh-keygen -y -f "$KEY_NAME"

# Move public key to a separate file
mv "$KEY_NAME.pub" .

echo "Key pair saved as $KEY_NAME and $KEY_NAME.pub"

